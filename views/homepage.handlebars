
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      {{post.post_content}}
    </p>
    <p>Created {{format_date post.date_created}}</p>
  </div>
  
</div>
{{/each}}

<h2>HOMEPAGE</h2>
